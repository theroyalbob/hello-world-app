generator client {
  provider = "prisma-client-js"
  output   = "../generated/contacts-client"
}

datasource db {
  provider  = "postgresql"
  url       = env("CONTACTS_PRISMA_URL")
  directUrl = env("CONTACTS_DATABASE_URL")
}

model ContactSubmission {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companyName    String
  contactName    String
  email          String
  projectDetails String
  status         SubmissionStatus @default(UNREAD)

  @@index([status])
}

enum SubmissionStatus {
  UNREAD
  READ
  RESPONDED
}
